<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.oracle.model.Orders" table="orders" schema="hibernate">
        <id name="orderid">
            <generator class="increment"></generator>
        </id>
        <property name="times">
            <column name="times" sql-type="varchar(30)"/>
        </property>
        <property name="status">
            <column name="status" sql-type="int(11)"/>
        </property>
        <property name="userid">
            <column name="userid" sql-type="int(11)" not-null="true"/>
        </property>

        <one-to-one name="add" class="com.oracle.model.Address"   outer-join="true"  cascade="all"></one-to-one>
    </class>
</hibernate-mapping>